<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandochooseMobile.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Red" Padding="24" CornerRadius="0">
            <Label Text="Randochoose" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="One line is one candidtate."></Label>

        <Editor x:Name="items" HeightRequest="100"></Editor>
        
        <Button Text="Choose!" Clicked="Handle_Clicked"></Button>
        <Label x:Name="chosenItem" Text="Here will be the chosen item."></Label>
        <Button Text="About" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
